#!/usr/bin/env ruby


require 'pathname'

require 'listen'
require 'resque'

require 'bagger'


module Bagger
  def self.main
    listen_path = ARGV[0]
    dest_path   = ARGV[1]

    if listen_path.nil? || dest_path.nil?
      puts "usage: bag-ingest LISTEN-PATH DEST-PATH"
    else
      puts "Listening to #{listen_path}"
      Listen.to!(listen_path, :filter => /\.zip$/) do |modified, added, removed|
        added.each do |a|
          institution = parse_institution a
          puts "Enqueuing #{a} (#{institution})"
          STDOUT.flush
          Resque.enqueue(Bagger::Worker, institution, a, dest_path)
        end
      end
    end
  end

  def self.parse_institution(pathname)
    Pathname.new(pathname).dirname.basename.to_s
  end
end

Bagger.main

